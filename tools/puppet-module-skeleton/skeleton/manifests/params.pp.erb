# == Class <%= metadata.name %>::params
# This class is meant to be called from <%= metadata.name %>
# It set variable according to platform
class <%= metadata.name %>::params {
  $pkgname = '<%= metadata.name %>'
  $conffile = '<%= metadata.name %>/etc/<%= metadata.name %>.conf'
  $service = $::osfamily ? {
    'Debian' => '<%= metadata.name %>',
    'RedHat' => '<%= metadata.name %>',
    default  => fail('unsupported platform')
  }
}
